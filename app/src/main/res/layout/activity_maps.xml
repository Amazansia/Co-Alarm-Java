<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--    // 지도 -->
    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <!--    // 검색창-->
    <EditText
        android:id="@+id/entertext"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="23dp"
        android:background="@drawable/edittext_shadow"
        android:hint="시,군,구,동으로 검색하세요"
        android:alpha="1.0"
        android:singleLine="true"
        android:imeOptions="actionSearch"/>


    <!--    //현위치 재검색 버튼 -->
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:alpha="0.8"
        android:background="@drawable/button_background"
        android:onClick="onClick_reset"
        android:text="현위치에서 재검색"
        android:textColor="#006eaa"
        android:visibility="visible" />


    <!--    공적마스크 정보(이미지) -->
    <ToggleButton
        android:id="@+id/btn_star"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_filled_star"
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:id="@+id/imgNotice"
        android:onClick="onClick_notice"
        android:alpha= "1.0"
        android:visibility="gone"
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/img_help" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:visibility="invisible"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>




</FrameLayout>