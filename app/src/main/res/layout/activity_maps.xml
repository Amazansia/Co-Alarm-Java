<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <EditText
        android:id="@+id/entertext"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="23dp"
        android:background="@drawable/edittext_shadow"
        android:hint=" 시,군,구,동으로 검색하세요"
        android:alpha="1.0"
        android:singleLine="true"
        android:imeOptions="actionSearch"/>


    <!--    //현위치 재검색 버튼 -->
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="75dp"
        android:alpha="0.8"
        android:background="@drawable/button_background"
        android:onClick="onClick_reset"
        android:text="현위치에서 재검색"
        android:textColor="#006eaa"
        android:visibility="visible" />


    <!--    공적마스크 정보(이미지) -->

    <ImageView
        android:id="@+id/imgNotice"
        android:alpha= "1.0"
        android:visibility="gone"
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/img_help" />

    <ImageButton
        android:id="@+id/imgGps"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/menubar_background"
        android:onClick="onClick_gps"
        android:src="@drawable/ic_gps" />


    <LinearLayout
        android:id="@+id/page"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="-170dp"
        android:background="@drawable/menubar_background"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btnDraw"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_menu" />

        <ToggleButton
            android:id="@+id/btnStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/ic_filled_star" />

        <Button
            android:id="@+id/btnNews"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:text="News"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_help" />

    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:visibility="invisible"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>




</FrameLayout>